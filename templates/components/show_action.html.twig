<div class="px-2 mb-3">
    <a href="{{ path('app_action_show', {'id': action.id}) }}" style="color: black; text-decoration: none">
        <div class="card col">
            <div class="card-header">
                <h5 class="card-title m-0">{{ action.libelle }}</h5>
            </div>
            {% if not action.image %}
                <img class="card-img-top" src="{{ asset( 'images/default-image.jpg') }}" alt="Card image cap" style="height: 180px">
            {% else %}
                <img class="card-img-top" src="{{ asset( 'uploads/imageAction/' ~ action.image) }}" alt="Card image cap" style="height: 180px">
            {% endif %}
            <div class="card-body d-flex justify-content-between" style="height: 30px; padding-top: 2px">
                <p>{{ action.date ? action.date|date('d/m/Y') : '' }}</p>
                <p>{{ action.location }}</p>
            </div>
        </div>
    </a>
</div>