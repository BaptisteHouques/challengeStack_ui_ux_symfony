{% form_theme form 'bootstrap_5_layout.html.twig' %}

<div class="container mt-4">
    {{ form_start(form) }}

    {{ form_row(form.libelle) }}

    {{ form_row(form.description) }}


    <p class="mb-0 mx-lg-1">{{ form_label(form.date.date) }}</p>
    <div class="d-flex justify-content-between flex-lg-row flex-sm-column align-items-center mb-3">
        <div style="width: 100%" class="mx-lg-1">
            {{ form_widget(form.date.date) }}
        </div>

        <div style="width: 100%" class="mx-lg-1 mt-sm-2 mt-lg-0">
            {{ form_widget(form.date.time) }}
        </div>
    </div>

    <div class="d-flex justify-content-between flex-lg-row flex-sm-column">
        <div style="width: 100%" class="mx-lg-1">
            {{ form_row(form.location) }}
        </div>

        <div style="width: 100%" class="mx-lg-1">
            {{ form_row(form.type) }}
        </div>
    </div>

    {{ form_row(form.responsible) }}

    {{ form_row(form.max_user) }}
    {{ form_row(form.image) }}

    <div class="d-flex justify-content-end">
        {% if from_page == 'edit' %}
            <div>
                <a href="{{ path('app_action_show', {'id': action.id}) }}" class="mx-2">
                    <button type="button" class="btn btn-secondary">Annuler</button>
                </a>
            </div>
        {% else %}
            <div>
                <a href="{{ path('app_action_index') }}" class="mx-2">
                    <button type="button" class="btn btn-secondary">Annuler</button>
                </a>
            </div>
        {% endif %}
        <button class="btn btn-primary">{{ button_label|default('Sauvegarder') }}</button>
    </div>
    {{ form_end(form) }}
</div>
