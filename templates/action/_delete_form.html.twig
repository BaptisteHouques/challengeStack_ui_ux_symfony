<form method="post" action="{{ path('app_action_delete', {'id': action.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ action.id) }}">
    <button class="btn" data-toggle="tooltip" data-placement="top" title="Supprimer"><img src="{{ asset('images/delete.png') }}" alt="Delete" style="width: 30px"></button>
</form>
