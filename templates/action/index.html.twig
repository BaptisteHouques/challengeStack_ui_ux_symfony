{% extends 'base.html.twig' %}

{% block title %}Action index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center m-3">
        <h1>Liste des actions</h1>
        <a href="{{ path('app_action_new') }}">
            <button type="button" class="btn btn-primary">Nouvelle action</button>
        </a>
    </div>

    <div class="container text-center">
        <div class="row row-cols-4 mx-3">
            {% for action in actions %}
                <div class="px-2">
                    <div class="card col">
                        <div class="card-body">
                            <h5 class="card-title">{{ action.libelle }}</h5>
                            <p class="card-text" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;">{{ action.description }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ action.date ? action.date|date('d-m-Y Ã  H:i:s') : '' }}</li>
                            <li class="list-group-item">{{ action.location }}</li>
                            <li class="list-group-item">{{ action.maxUser }}</li>
                        </ul>
                        <div class="card-body">
                            <div class="d-flex justify-content-around">
                                <div>
                                    <a href="{{ path('app_action_show', {'id': action.id}) }}">
                                        <button type="button" class="btn btn-outline-info">Voir</button>
                                    </a>
                                </div>
                                <div>
                                    <a href="{{ path('app_action_edit', {'id': action.id}) }}">
                                        <button type="button" class="btn btn-secondary">Editer</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}
