{% extends 'base.html.twig' %}
{% form_theme resetForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <h1 class="m-3">Réinitialisez votre mot de passe</h1>

    <div class="container">
        {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
