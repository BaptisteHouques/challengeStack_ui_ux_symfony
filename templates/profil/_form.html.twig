{% form_theme form 'bootstrap_5_layout.html.twig' %}

<div class="container">
    {{ form_start(form) }}

    <div class="d-flex justify-content-between align-items-center flex-lg-row flex-sm-column">
        <div style="width: 100%" class="mx-lg-1">
            {{ form_row(form.firstname) }}
        </div>

        <div style="width: 100%" class="mx-lg-1">
            {{ form_row(form.lastname) }}
        </div>
    </div>

    {{ form_widget(form) }}
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>

    {{ form_end(form) }}
</div>
